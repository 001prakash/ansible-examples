# {{ ansible_managed }}

define hostgroup {
	hostgroup_name loadbalancers 
        alias Load Balancers 
}

{% for host in groups['lbservers'] %}
	define host {
		use                     linux-server
		host_name               {{ host }} 
		alias                   {{ host }}
		address                 {{ hostvars[host].ansible_default_ipv4.address }}
		hostgroups 	        loadbalancers	
		}	
{% endfor %}

{% for host in groups['tag_ansible_group_lbservers'] %}
	define host {
		use                     linux-server
		host_name               {{ host }} 
		alias                   {{ host }}
		address                 {{ hostvars[host].ansible_default_ipv4.address }}
		hostgroups 	        loadbalancers	
		}
{% endfor %}

